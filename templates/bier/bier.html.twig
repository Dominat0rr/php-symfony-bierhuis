{% extends 'base.html.twig' %}

{% block title %}BierHuis | {{ bier.naam }}{% endblock %}

{% block body %}

    <h4>{{ bier.naam }}</h4>
    <dl>
        <dt>Naam:</dt>
        <dd>{{ bier.naam }}</dd>
        <dt>Brouwer:</dt>
        <dd><a href="{{ path("brouwers.brouwer", {id: bier.brouwer.id}) }}">{{ bier.brouwer.naam }}</a></dd>
        <dt>Soort:</dt>
        <dd><a href={{ path("soorten.soort", {id: bier.soort.id}) }}>{{ bier.soort.naam }}</a></dd>
        <dt>Alcohol:</dt>
        <dd>{{ bier.alcohol }}</dd>
        <dt>Prijs:</dt>
        <dd>â‚¬{{ bier.prijs }}</dd>
    </dl>

    <form action="#" method="POST">
        <input type="hidden" name="bierId" value="{{ bier.id }}">
        <div class="form-group">
            <label>Aantal</label>
            <input type="number" class="form-control" name="aantal" style="width:200px;">
        </div>
        <button type="submit" class="btn btn-primary" name="submit">Toevoegen</button>
    </form>
    <hr>

{% endblock %}
